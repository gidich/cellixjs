{
  "name": "cellixjs",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "author": "CellixJS",
  "license": "MIT",
  "main": "packages/api/dist/src/index.js",
  "scripts": {
    "start": "npm run build && concurrently npm:start:* --kill-others-on-fail --workspace=@ocom/api",
    "build": "npm run build --ws --if-present",
    "lint": "npm run lint --ws --if-present",
    "format": "npm run format --ws --if-present",
    "gen": "npm run gen --ws --if-present",
    "tsbuild": "tsc --build",
    "tswatch": "tsc --build --watch",
    "clean": "npm install && npm run clean --ws --if-present && rimraf dist node_modules package-lock.json **/coverage",
    "dev": "npm run build && concurrently \"npm:azurite:*\" \"npm:start-emulator:*\" \"npm:start:*\" --kill-others-on-fail --workspace=@ocom/api",
    "start:api": "npm run start --workspace=@ocom/api",
    "start:ui-community": "npm run dev --workspace=@ocom/ui-community",
    "start-emulator:mongo-memory-server": "cd packages/service-mongodb-memory-server && npm install && npm run build && npm run start",
    "start-emulator:auth-server": "cd packages/service-oauth2-mock-server && npm install && npm run build && npm run start",
    "test": "npm run test --ws --if-present",
    "test:all": "npm run test:all --ws --if-present",
    "test:coverage": "npm run test:coverage --ws --if-present",
    "test:integration": "npm run test:integration --ws --if-present",
    "test:serenity": "npm run test:serenity --ws --if-present",
    "test:unit": "npm run test:unit --ws --if-present",
    "test:watch": "node scripts/test-watch-all.js",
    "azurite:blob": "azurite-blob --silent --location ./__blobstorage__",
    "azurite:queue": "azurite-queue --silent --location ./__queuestorage__",
    "azurite:table": "azurite-table --silent --location ./__tablestorage__"
  },
  "workspaces": [
    "packages/cellix-domain-seedwork",
    "packages/cellix-event-bus-seedwork-node",
    "packages/api-domain",
    "packages/cellix-data-sources-mongoose",
    "packages/api-data-sources-mongoose-models",
    "packages/cellix-api-services-spec",
    "packages/service-blob-storage",
    "packages/service-mongoose",
    "packages/service-token-validation",
    "packages/service-otel",
    "packages/api-application-services",
    "packages/api-context-spec",
    "packages/api-event-handler",
    "packages/api-graphql",
    "packages/api-rest",
    "packages/api-persistence",
    "packages/api",
    "packages/cellix-ui-core",
    "packages/ui-components",
    "packages/ui-community"
  ],
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.1.2",
    "@biomejs/biome": "2.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "azurite": "^3.35.0",
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
